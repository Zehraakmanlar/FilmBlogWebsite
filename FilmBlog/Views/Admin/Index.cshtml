@using FilmBlog.Models.Class;
@model List<Anasayfa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    h2 {
        text-align: center;
    }

    table {
        text-align: center;
    }
    #yeni{
        margin-left:540px;
    }
</style>

<h2>Film Listesi</h2>
<br />
<table class="table-bordered" align="center">
    <tr>
        <th>ID</th>
        <th>RESİM URL</th>
        <th>SİL</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.resim</td>
            @if (User.IsInRole("A"))
            {
                <td><a href="/Admin/FilmSil/@x.id" class="btn btn-danger">Sil</a></td>
            }

        </tr>
    }
</table>
<br />
<a href="/Admin/YeniFilm/" class="btn btn-primary" id="yeni">Yeni Film Ekle</a>
